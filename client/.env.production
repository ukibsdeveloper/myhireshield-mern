# MyHireShield - Frontend Production Environment

# API URL - Your backend API endpoint
VITE_API_URL=https://api.myhireshield.com/api

# App Configuration
VITE_APP_NAME=MyHireShield
VITE_APP_VERSION=1.0.0

# Firebase Configuration (if using Firebase features)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_2FA=true
VITE_ENABLE_DOCUMENT_VERIFICATION=true

# File Upload Limits
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf